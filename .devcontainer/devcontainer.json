// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu

{
  "name": "Ubuntu",
  "image": "mcr.microsoft.com/devcontainers/base:noble",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "portsAttributes": {
    "7676": {
      "label": "Compute",
      "onAutoForward": "openPreview"
    }
  },
  "updateContentCommand": "npm install",
  "postAttachCommand": {
    "start": "npm run start",
    "build": "npm run build"
  },
  "waitFor": "updateContentCommand",
  "customizations": {
    "vscode": {
      "extensions": [
        "jkearins.action-buttons-ext@0.1.1"
      ],
      "settings": {
        "chat.sendElementsToChat.enabled": false,
        "editor.minimap.enabled": false,
        "actionButtons": {
          "commands": [
            {
              "name": "ðŸ’» Terminal",
              "singleInstance": true,
              "useVsCodeApi": true,
              "command": "workbench.action.terminal.toggleTerminal",
              "tooltip": "Open a terminal"
            },
            {
              "name": "ðŸ§ª Serve",
              "singleInstance": true,
              "command": "npx --yes @fastly/compute-js-static-publish@latest --root-dir=./build --kv-store-name=my-site-content && cd compute-js && npm run dev:publish && npm run dev:start",
              "tooltip": "Test your Fastly Compute app"
            },
            {
              "name": "ðŸš€ Publish",
              "singleInstance": true,
              "command": "cd compute-js && npm run fastly:deploy && npm run fastly:publish && readarray -t lines < <(npx --yes @fastly/cli domain list --version=latest) && IFS='   ' read -r -a array <<< \"${lines[1]}\" && echo 'YAY check out your new site ðŸª© ðŸ›¼ ðŸŽ' && echo https://${array[2]}",
              "tooltip": "Publish your content to Fastly Compute"
            }
          ],
          "defaultColor": "none",
          "reloadButton": null
        }
      }
    }
  }
}
